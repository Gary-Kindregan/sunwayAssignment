  "description": "A full-stack application with a C# backend and React frontend",
  "main": "index.js",
  "scripts": {
    "install-backend": "cd HotelApi && dotnet restore",
    "install-frontend": "cd hotel-spa && npm install",
    "start-backend": "cd HotelApi && dotnet run",
    "start-frontend": "cd hotel-spa && npm start",
    "install": "npm-run-all install-backend install-frontend",
